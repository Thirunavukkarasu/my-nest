{
  "name": "backend",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "bun run api/index.ts",
    "build": "echo 'No build needed - Bun handles TypeScript natively'",
    "start": "bun run api/index.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "test:api": "vitest run src/__tests__/api",
    "test:api:manual": "tsx src/__tests__/scripts/test-api.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:update": "pnpm db:generate && pnpm db:migrate",
    "db:seed": "tsx src/db/seed.ts"
  },
  "dependencies": {
    "@faker-js/faker": "^9.2.0",
    "@neondatabase/serverless": "^1.0.2",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.5",
    "dotenv-expand": "^12.0.1",
    "drizzle-orm": "^0.36.4",
    "drizzle-zod": "^0.5.1",
    "express": "5.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/bun": "1.3.1",
    "@types/express": "5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20",
    "@types/pg": "^8.10.9",
    "@vitest/ui": "^2.1.9",
    "drizzle-kit": "^0.28.0",
    "tsx": "^4.19.1",
    "typescript": "5.8.3",
    "vitest": "^2.1.9"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
